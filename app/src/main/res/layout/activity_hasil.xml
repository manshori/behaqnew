<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/TopScrollView"
    android:orientation="vertical"
    tools:context="com.example.hp.behaq.HasilActivity">

    <include layout="@layout/app_bar_home"/>
    <ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/TopRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ToplinearLayout"
            >

            <ImageView
                android:id="@+id/img_dataHasil"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_dataHasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/colorhitam"
                android:textAlignment="gravity"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ToplinearLayout2"
            android:layout_below="@+id/ToplinearLayout"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAbu"
            tools:ignore="Orientation">

            <TextView
                android:id="@+id/tv_datacontentHasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ToplinearLayout3"
            android:layout_below="@+id/ToplinearLayout2">

            <ImageView
                android:id="@+id/img_sentimentHasil"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/tv_sentimentHasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/colorhitam"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ToplinearLayout4"
            android:layout_below="@+id/ToplinearLayout3"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAbu"
            tools:ignore="Orientation">

            <TextView
                android:id="@+id/tv_sentimentcontentHasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <EditText
            android:id="@+id/et_inputSearchHasil"
            android:layout_width="300dp"
            android:layout_height="145dp"
            android:layout_margin="10dp"
            android:layout_alignStart="@+id/ToplinearLayout4"
            android:layout_below="@+id/ToplinearLayout4"
            android:background="@drawable/border"
            android:ellipsize="start"
            android:gravity="left"
            android:hint="Masukkan kata"
            android:inputType="textMultiLine"
            android:lines="@android:integer/config_longAnimTime"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_analyzeHasil"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginBottom="50dp"
            android:layout_alignEnd="@+id/et_inputSearchHasil"
            android:layout_below="@+id/et_inputSearchHasil"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_round"
            android:text="Analisa sekarang !"
            android:textColor="@color/colorPutih" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>